<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GUI.View.LandingPageView"
             xmlns:viewmodel="clr-namespace:GUI.ViewModel"
             x:DataType="viewmodel:LandingPageViewModel">
    
    <ContentPage.Content>
        <VerticalStackLayout>
            <Label
                Text="{Binding Text}"/>
            <Button
                Text="ListLocalRecipe"
                Command="{Binding OpenListLocalRecipeCommand}"/>
        </VerticalStackLayout>
    </ContentPage.Content>
</ContentPage>